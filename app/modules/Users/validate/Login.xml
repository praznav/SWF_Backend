<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.module_dir%/Users/config/validators.xml"
>
	
	<ae:configuration>
		
		<validators>
            <validator class="Users_UsernameValidator" name="username">
                <arguments>
                    <argument>username</argument>
                </arguments>
                <errors>
                    <error>The parameter must contain a valid username</error>
                </errors>
            </validator>
            <validator class="Users_PasswordValidator" name="password">
                <arguments>
                    <argument>password</argument>
                </arguments>
                <errors>
                    <error>The parameter must contain a valid password</error>
                </errors>
            </validator>

		</validators>
		
	</ae:configuration>
	
</ae:configurations>
